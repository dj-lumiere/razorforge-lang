# Hello World example in RazorForge
# Demonstrates basic syntax and recipe structure

recipe main() {
    # Basic variable declarations
    let message: Text = "Hello, RazorForge!"
    var count: u32 = 42
    preset pi: f64 = 3.14159

    # Control flow
    while count > 0 {
        count = count - 1
    }

    # Type examples
    let num8: s8 = -128
    let num64: u64 = 18446744073709551615
    let float: f32 = 2.71828
    let flag: bool = true
}
