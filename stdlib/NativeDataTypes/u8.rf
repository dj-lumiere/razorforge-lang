# ============================================================================
# Checked Arithmetic (+?, -?, *?) - returns Maybe<T>
# ============================================================================

routine u8.__add_checked__(other: u8) -> Maybe<u8> {
    danger! {
        let (result, overflow) = @intrinsic.add.overflow<i8>(me, other)
        return if overflow then None else result
    }
}

routine u8.__sub_checked__(other: u8) -> Maybe<u8> {
    danger! {
        let (result, overflow) = @intrinsic.sub.overflow<i8>(me, other)
        return if overflow then None else result
    }
}

routine u8.__mul_checked__(other: u8) -> Maybe<u8> {
    danger! {
        let (result, overflow) = @intrinsic.mul.overflow<i8>(me, other)
        return if overflow then None else result
    }
}

# ============================================================================
# Power Operations (**)
# ============================================================================

# Power operator (**) - can overflow
@crash_only
routine u8.__pow__!(exp: u8) -> u8 {
    danger! {
        var result: u8 = 1
        var base: u8 = me
        var e: u32 = exp
        if me == 0 and exp == 0 {
            throw IndeterminateResultError()
        }
        while e > 0 {
            if (e & 1) == 1 {
                result = @intrinsic.mul<i8>(result, base)
            }
            base = @intrinsic.mul<i8>(base, base)
            e = e >> 1
        }
        return result
    }
}

# Wrapping power (**%)
@crash_only
routine u8.__pow_wrap__!(exp: u8) -> u8 {
    danger! {
        var result: u8 = 1
        var base: u8 = me
        var e: u32 = exp
        if me == 0 and exp == 0 {
            throw IndeterminateResultError()
        }
        while e > 0 {
            if (e & 1) == 1 {
                result = @intrinsic.mul.wrapping<i8>(result, base)
            }
            base = @intrinsic.mul.wrapping<i8>(base, base)
            e = e >> 1
        }
        return result
    }
}

# Saturating power (**^)
@crash_only
routine u8.__pow_sat__!(exp: u8) -> u8 {
    danger! {
        var result: u8 = 1
        var base: u8 = me
        var e: u32 = exp
        if me == 0 and exp == 0 {
            throw IndeterminateResultError()
        }
        while e > 0 {
            if (e & 1) == 1 {
                result = @intrinsic.mul.saturating<i8>(result, base)
            }
            base = @intrinsic.mul.saturating<i8>(base, base)
            e = e >> 1
        }
        return result
    }
}

# Checked power (**?) - returns Maybe<u8>
routine u8.__pow_checked__(exp: u8) -> Maybe<u8> {
    danger! {
        var result: u8 = 1
        var base: u8 = me
        var e: u32 = exp
        if me == 0 {
            return None
        }
        while e > 0 {
            if (e & 1) == 1 {
                let (new_result, overflow) = @intrinsic.mul.overflow<i8>(result, base)
                if overflow {
                    return None
                }
                result = new_result
            }
            let (new_base, overflow) = @intrinsic.mul.overflow<i8>(base, base)
            if overflow and e > 1 {
                return None
            }
            base = new_base
            e = e >> 1
        }
        return result
    }
}

