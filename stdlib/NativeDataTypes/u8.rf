# RazorForge u8 (unsigned 8-bit integer) native type implementation
# Maps directly to LLVM i8 type using compiler intrinsics
namespace core
# Core u8 type definition - maps to LLVM i8
record u8 {
    public value: LlvmNativeI8
}

# Constants for u8 limits
preset U8_MIN: u8 = 0_u8
preset U8_MAX: u8 = 255_u8
preset U8_ZERO: u8 = 0_u8
preset U8_ONE: u8 = 1_u8

# ============================================================================
# Arithmetic Operations (trapping on overflow by default)
# ============================================================================

@crash_only
routine u8.__add__!(other: u8) -> u8 {
    danger! {
        return @intrinsic.add<i8>(me, other)
    }
}

@crash_only
routine u8.__sub__!(other: u8) -> u8 {
    danger! {
        return @intrinsic.sub<i8>(me, other)
    }
}

@crash_only
routine u8.__mul__!(other: u8) -> u8 {
    danger! {
        return @intrinsic.mul<i8>(me, other)
    }
}

@crash_only
routine u8.__floordiv__!(other: u8) -> u8 {
    if other == 0 {
        throw DivisionByZeroError()
    }
    danger! {
        return @intrinsic.udiv<i8>(me, other)
    }
}

@crash_only
routine u8.__mod__!(other: u8) -> u8 {
    danger! {
        return @intrinsic.urem<i8>(me, other)
    }
}

