# IEEE 754 bit manipulation
routine f128.as_bits(my: f128) -> s128 {
    return llvm_intrinsic("bitcast", my)  # Reinterpret as s128
}

routine f128(from_bits: BitArray<128>) -> f128 {
    return llvm_intrinsic("bitcast", from_bits)  # Reinterpret BitArray<128> as f128
}

# Extract IEEE 754 components (binary128: 1 sign + 15 exponent + 112 mantissa)
routine f128.extract_sign(my: f128) -> bool {
    let bits = my.as_bits()
    return (bits >> 127) != 0
}

routine f128.extract_exponent(my: f128) -> s128 {
    let bits = my.as_bits()
    return (bits >> 112) & 0x7FFF  # 15 bits
}

routine f128.extract_mantissa(my: f128) -> s128 {
    let bits = my.as_bits()
    return bits & 0x0000FFFFFFFFFFFFFFFFFFFFFFFFFFFF  # 112 bits
}

