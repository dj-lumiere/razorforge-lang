# RazorForge f128 (quadruple precision floating point) native type implementation
# Maps directly to LLVM fp128 type and IEEE 754 binary128 format

# Core f128 type definition - maps to LLVM fp128
record f128 {
    public value: LlvmNativeFp128
}

# IEEE 754 quadruple precision constants
preset F128_EPSILON: f128 = 1.925929944387235853055977942584927319e-34
preset F128_MIN: f128 = -1.189731495357231765085759326628007016e+4932
preset F128_MAX: f128 = 1.189731495357231765085759326628007016e+4932
preset F128_MIN_POSITIVE: f128 = 3.362103143112093506262677817321752602e-4932
preset F128_INFINITY: f128 = 1.0 / 0.0
preset F128_NEG_INFINITY: f128 = -1.0 / 0.0
preset F128_NAN: f128 = 0.0 / 0.0

# Mathematical constants with quadruple precision
preset F128_PI: f128 = 3.141592653589793238462643383279502884
preset F128_E: f128 = 2.718281828459045235360287471352662498
preset F128_SQRT_2: f128 = 1.414213562373095048801688724209698079
preset F128_LN_2: f128 = 0.693147180559945309417232121458176568
preset F128_LN_10: f128 = 2.302585092994045684017991454684364208

# Basic arithmetic operations (LLVM floating point intrinsics)

# Addition - maps to LLVM fadd
routine f128.add(my: f128, other: f128) -> f128 {
    return llvm_intrinsic("fadd", my, other)
}

# Subtraction - maps to LLVM fsub
routine f128.sub(my: f128, other: f128) -> f128 {
    return llvm_intrinsic("fsub", my, other)
}

# Multiplication - maps to LLVM fmul
routine f128.mul(my: f128, other: f128) -> f128 {
    return llvm_intrinsic("fmul", my, other)
}

# Division - maps to LLVM fdiv
routine f128.div(my: f128, other: f128) -> f128 {
    return llvm_intrinsic("fdiv", my, other)
}

# Remainder - maps to LLVM frem
routine f128.rem(my: f128, other: f128) -> f128 {
    return llvm_intrinsic("frem", my, other)
}

# Comparison operations (LLVM fcmp)
routine f128.eq(my: f128, other: f128) -> bool {
    return llvm_intrinsic("fcmp oeq", my, other)  # Ordered equal
}

routine f128.ne(my: f128, other: f128) -> bool {
    return llvm_intrinsic("fcmp one", my, other)  # Ordered not equal
}

routine f128.lt(my: f128, other: f128) -> bool {
    return llvm_intrinsic("fcmp olt", my, other)  # Ordered less than
}

routine f128.le(my: f128, other: f128) -> bool {
    return llvm_intrinsic("fcmp ole", my, other)  # Ordered less equal
}

routine f128.gt(my: f128, other: f128) -> bool {
    return llvm_intrinsic("fcmp ogt", my, other)  # Ordered greater than
}

routine f128.ge(my: f128, other: f128) -> bool {
    return llvm_intrinsic("fcmp oge", my, other)  # Ordered greater equal
}

# NaN-aware comparisons
routine f128.is_nan(my: f128) -> bool {
    return llvm_intrinsic("fcmp uno", my, my)   # Unordered (NaN check)
}

routine f128.is_finite(my: f128) -> bool {
    return not my.is_nan() and not my.is_infinite()
}

routine f128.is_infinite(my: f128) -> bool {
    return my == F128_INFINITY or my == F128_NEG_INFINITY
}

# Mathematical functions using LLVM intrinsics
routine f128.abs(my: f128) -> f128 {
    return llvm_intrinsic("llvm.fabs.f128", my)
}

routine f128.sqrt(my: f128) -> f128 {
    return llvm_intrinsic("llvm.sqrt.f128", my)
}

routine f128.sin(my: f128) -> f128 {
    # Note: LLVM may not have native f128 sin, use library calls
    # For now, demote to f64, compute, and promote back
    let demoted = f64(my)
    return f128(demoted.sin())
}

routine f128.cos(my: f128) -> f128 {
    # Note: LLVM may not have native f128 cos, use library calls
    # For now, demote to f64, compute, and promote back
    let demoted = f64(my)
    return f128(demoted.cos())
}

routine f128.tan(my: f128) -> f128 {
    return my.sin() / my.cos()
}

routine f128.pow(my: f128, exponent: f128) -> f128 {
    # Note: LLVM may not have native f128 pow, use library calls
    # For now, demote to f64, compute, and promote back
    let demoted_base = f64(my)
    let demoted_exp = f64(exponent)
    return f128(demoted_base.pow(demoted_exp))
}

routine f128.exp(my: f128) -> f128 {
    # Note: LLVM may not have native f128 exp, use library calls
    # For now, demote to f64, compute, and promote back
