# ============================================================================
# Example: Fibonacci using s64
# ============================================================================

routine fibonacci_s64(n: s64) -> s64 {
    when {
        n <= 1_s64 => n,
        _ => {
            var a: s64 = 0_s64
            var b: s64 = 1_s64
            var i: s64 = 2_s64

            while i <= n {
                let temp = a + b
                a = b
                b = temp
                i = i + 1_s64
            }

            return b
        }
    }
}

# ============================================================================
# Example: GCD (Greatest Common Divisor) using intrinsics
# ============================================================================

routine gcd_s64(a: s64, b: s64) -> s64 {
    var x = a.abs()
    var y = b.abs()

    while y != 0_s64 {
        let temp = y
        y = x % y
        x = temp
    }

    return x
}
