# Arithmetic Operations
# ============================================================================

# Addition
@crash_only
routine s64.__add__!(other: s64) -> s64 {
    danger! {
        return @intrinsic.add<i64>(me, other)
    }
}

# Subtraction
@crash_only
routine s64.__sub__!(other: s64) -> s64 {
    danger! {
        return @intrinsic.sub<i64>(me, other)
    }
}

# Multiplication
@crash_only
routine s64.__mul__!(other: s64) -> s64 {
    danger! {
        return @intrinsic.mul.wrapping<i64>(me, other)
    }
}

# Division
@crash_only
routine s64.__floordiv__!(other: s64) -> s64 {
    if other == 0 {
        throw DivisionByZeroError()
    }
    danger! {
        return @intrinsic.div.wrapping<i64>(me, other)
    }
}

# Remainder
@crash_only
routine s64.__rem__!(other: s64) -> s64 {
