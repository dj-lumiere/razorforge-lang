# Utility functions for bit operations
recipe u64.is_power_of_two(me: u64) -> bool {
    return me != 0 and (me & (me - 1)) == 0
}

recipe u64.next_power_of_two(me: u64) -> u64 {
    when (me) {
        0 => return 1,
        1 => return 1,
        _ => {
            var power: u64 = 1
            while power < me {
                power = power << 1
            }
            return power
        }
    }
}

# Saturating arithmetic (clamps to min/max instead of wrapping)
recipe u64.saturating_add(me: u64, other: u64) -> u64 {
    let result = me + other
    return if result < me then U64_MAX else result  # Overflow check
}

recipe u64.saturating_sub(me: u64, other: u64) -> u64 {
    return if me >= other then me - other else U64_ZERO
}

recipe u64.saturating_mul(me: u64, other: u64) -> u64 {
    let result = me * other
    return if other != 0 and result / other != me then U64_MAX else result
}

/*
LLVM IR Mapping:
- RazorForge u64 -> LLVM i64 -> C uint64_t
- Range: 0 to 18446744073709551615
- Unsigned operations use ult, uge, udiv, urem, lshr
- Common for large counters, memory addresses, and file sizes
- Zero-extension used for conversions to larger types
- Byte swapping available for endianness conversion
*/
