# RazorForge u64 (unsigned 64-bit integer) native type implementation
# Maps directly to LLVM i64 type for unsigned operations

# Core u64 type definition - maps to LLVM i64
record u64 {
    public value: LlvmNativeI64
}

# Constants for u64 limits (LLVM constant values)
preset U64_MIN: u64 = 0_u64
preset U64_MAX: u64 = 18446744073709551615_u64
preset U64_ZERO: u64 = 0_u64
preset U64_ONE: u64 = 1_u64

# Basic arithmetic operations (LLVM intrinsics: add, sub, mul, udiv, urem)

# Addition with overflow checking
recipe u64.add(me: u64, other: u64) -> u64 {
    return llvm_intrinsic("llvm.uadd.with.overflow.i64", me, other)
}

# Subtraction with overflow checking
recipe u64.sub(me: u64, other: u64) -> u64 {
    return llvm_intrinsic("llvm.usub.with.overflow.i64", me, other)
}

# Multiplication with overflow checking
recipe u64.mul(me: u64, other: u64) -> u64 {
    return llvm_intrinsic("llvm.umul.with.overflow.i64", me, other)
}

# Division (unsigned) - maps to LLVM udiv
recipe u64.floordiv(me: u64, other: u64) -> u64 {
    when (other) {
        0 => throw panic("Division by zero"),
        _ => return llvm_intrinsic("udiv", me, other)
    }
}

# Remainder (unsigned) - maps to LLVM urem
recipe u64.rem(me: u64, other: u64) -> u64 {
    when (other) {
        0 => throw panic("Division by zero"),
        _ => return llvm_intrinsic("urem", me, other)
    }
}

# Bitwise operations (direct LLVM mapping)
recipe u64.and(me: u64, other: u64) -> u64 {
    return llvm_intrinsic("and", me, other)
}

recipe u64.or(me: u64, other: u64) -> u64 {
    return llvm_intrinsic("or", me, other)
}

recipe u64.xor(me: u64, other: u64) -> u64 {
    return llvm_intrinsic("xor", me, other)
}

recipe u64.not(me: u64) -> u64 {
    return llvm_intrinsic("xor", me, 18446744073709551615)
}

# Bit shifting operations
recipe u64.shl(me: u64, bits: u64) -> u64 {
    return llvm_intrinsic("shl", me, bits)
}

recipe u64.shr(me: u64, bits: u64) -> u64 {
    return llvm_intrinsic("lshr", me, bits)  # Logical right shift for unsigned
}

# Comparison operations (LLVM icmp)
recipe u64.eq(me: u64, other: u64) -> bool {
    return llvm_intrinsic("icmp eq", me, other)
}

recipe u64.ne(me: u64, other: u64) -> bool {
    return llvm_intrinsic("icmp ne", me, other)
}

recipe u64.lt(me: u64, other: u64) -> bool {
    return llvm_intrinsic("icmp ult", me, other)  # Unsigned less than
}

recipe u64.le(me: u64, other: u64) -> bool {
    return llvm_intrinsic("icmp ule", me, other)  # Unsigned less equal
}

recipe u64.gt(me: u64, other: u64) -> bool {
    return llvm_intrinsic("icmp ugt", me, other)  # Unsigned greater than
}

recipe u64.ge(me: u64, other: u64) -> bool {
    return llvm_intrinsic("icmp uge", me, other)  # Unsigned greater equal
}

# Math operations
recipe u64.min(me: u64, other: u64) -> u64 {
    return if me <= other then me else other
}

recipe u64.max(me: u64, other: u64) -> u64 {
    return if me >= other then me else other
}

# Bit manipulation utilities
recipe u64.count_leading_zeros(me: u64) -> u64 {
    return llvm_intrinsic("llvm.ctlz.i64", me, false)
}

recipe u64.count_trailing_zeros(me: u64) -> u64 {
    return llvm_intrinsic("llvm.cttz.i64", me, false)
}

recipe u64.count_ones(me: u64) -> u64 {
    return llvm_intrinsic("llvm.ctpop.i64", me)
}

# Byte swapping for endianness conversion
recipe u64.byte_swap(me: u64) -> u64 {
    return llvm_intrinsic("llvm.bswap.i64", me)
}

# Type conversions to other native types (using constructor syntax)
recipe u8(from_u64: u64) -> u8 {
    return llvm_intrinsic("trunc", from_u64)      # Truncate to 8-bit
}

recipe u16(from_u64: u64) -> u16 {
    return llvm_intrinsic("trunc", from_u64)      # Truncate to 16-bit
}

recipe u32(from_u64: u64) -> u32 {
    return llvm_intrinsic("trunc", from_u64)      # Truncate to 32-bit
}

recipe s8(from_u64: u64) -> s8 {
    return llvm_intrinsic("trunc", from_u64)      # Truncate to signed 8-bit
}

recipe s16(from_u64: u64) -> s16 {
    return llvm_intrinsic("trunc", from_u64)      # Truncate to signed 16-bit
}

recipe s32(from_u64: u64) -> s32 {
    return llvm_intrinsic("trunc", from_u64)      # Truncate to signed 32-bit
}

recipe s64(from_u64: u64) -> s64 {
    return llvm_intrinsic("bitcast", from_u64)    # Direct bit reinterpretation
}

recipe u128(from_u64: u64) -> u128 {
    return llvm_intrinsic("zext", from_u64)       # Zero-extend to 128-bit
}

recipe s128(from_u64: u64) -> s128 {
    return llvm_intrinsic("zext", from_u64)       # Zero-extend to signed 128-bit
}

recipe f32(from_u64: u64) -> f32 {
    return llvm_intrinsic("uitofp", from_u64)     # Unsigned int to float
}

recipe f64(from_u64: u64) -> f64 {
    return llvm_intrinsic("uitofp", from_u64)     # Unsigned int to double
}

recipe f128(from_u64: u64) -> f128 {
    return llvm_intrinsic("uitofp", from_u64)     # Unsigned int to quad
}

recipe bool(from_u64: u64) -> bool {
    return from_u64 != 0
}

