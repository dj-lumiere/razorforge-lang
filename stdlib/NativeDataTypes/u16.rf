# ============================================================================
# Checked Arithmetic (+?, -?, *?) - returns Maybe<T>
# ============================================================================

routine u16.__add_checked__(you: u16) -> Maybe<u16> {
    danger! {
        let (result, overflow) = @intrinsic.add.overflow<i16>(me, you)
        return if overflow then None else result
    }
}

routine u16.__sub_checked__(you: u16) -> Maybe<u16> {
    danger! {
        let (result, overflow) = @intrinsic.sub.overflow<i16>(me, you)
        return if overflow then None else result
    }
}

routine u16.__mul_checked__(you: u16) -> Maybe<u16> {
    danger! {
        let (result, overflow) = @intrinsic.mul.overflow<i16>(me, you)
        return if overflow then None else result
    }
}

# ============================================================================
# Power Operations (**)
# ============================================================================

# Power operator (**) - can overflow
@crash_only
routine u16.__pow__!(exp: u16) -> u16 {
    danger! {
        var result: u16 = 1
        var base: u16 = me
        var e: u32 = exp
        if me == 0 and exp == 0 {
            throw IndeterminateResultError()
        }
        while e > 0 {
            if (e & 1) == 1 {
                result = @intrinsic.mul<i16>(result, base)
            }
            base = @intrinsic.mul<i16>(base, base)
            e = e >> 1
        }
        return result
    }
}

# Wrapping power (**%)
@crash_only
routine u16.__pow_wrap__!(exp: u16) -> u16 {
    danger! {
        var result: u16 = 1
        var base: u16 = me
        var e: u32 = exp
        if me == 0 and exp == 0 {
            throw IndeterminateResultError()
        }
        while e > 0 {
            if (e & 1) == 1 {
                result = @intrinsic.mul.wrapping<i16>(result, base)
            }
            base = @intrinsic.mul.wrapping<i16>(base, base)
            e = e >> 1
        }
        return result
    }
}

# Saturating power (**^)
@crash_only
routine u16.__pow_sat__!(exp: u16) -> u16 {
    danger! {
        var result: u16 = 1
        var base: u16 = me
        var e: u32 = exp
        if me == 0 and exp == 0 {
            throw IndeterminateResultError()
        }
        while e > 0 {
            if (e & 1) == 1 {
                result = @intrinsic.mul.saturating<i16>(result, base)
            }
            base = @intrinsic.mul.saturating<i16>(base, base)
            e = e >> 1
        }
        return result
    }
}

# Checked power (**?) - returns Maybe<u16>
routine u16.__pow_checked__(exp: u16) -> Maybe<u16> {
    danger! {
        var result: u16 = 1
        var base: u16 = me
        var e: u32 = exp
        if me == 0 {
            return None
        }
        while e > 0 {
            if (e & 1) == 1 {
                let (new_result, overflow) = @intrinsic.mul.overflow<i16>(result, base)
                if overflow {
                    return None
                }
                result = new_result
            }
            let (new_base, overflow) = @intrinsic.mul.overflow<i16>(base, base)
            if overflow and e > 1 {
                return None
            }
            base = new_base
            e = e >> 1
        }
        return result
    }
}

