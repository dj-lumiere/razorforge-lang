# ============================================================================
# Arithmetic Operations (trapping on overflow by default)
# ============================================================================

routine u16.__add__(other: u16) -> u16 {
    danger! {
        return @intrinsic.add<i16>(me, other)
    }
}

routine u16.__sub__(other: u16) -> u16 {
    danger! {
        return @intrinsic.sub<i16>(me, other)
    }
}

routine u16.__mul__(other: u16) -> u16 {
    danger! {
        return @intrinsic.mul<i16>(me, other)
    }
}

routine u16.__floordiv__(other: u16) -> u16 {
    danger! {
        return @intrinsic.udiv<i16>(me, other)
    }
}

routine u16.__mod__(other: u16) -> u16 {
    danger! {
        return @intrinsic.urem<i16>(me, other)
    }
}

