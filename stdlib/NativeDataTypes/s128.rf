# RazorForge s128 (signed 128-bit integer) native type implementation
# Maps directly to LLVM i128 type for extended precision integers

# Core s128 type definition - maps to LLVM i128
struct s128 {
    public value: LlvmNativeI128
}

# Constants for s128 limits (LLVM constant values)
preset S128_MIN: s128 = -170_141_183_460_469_231_731_687_303_715_884_105_728_s128
preset S128_MAX: s128 = 170_141_183_460_469_231_731_687_303_715_884_105_727_s128
preset S128_ZERO: s128 = 0_s128
preset S128_ONE: s128 = 1_s128

# Basic arithmetic operations (LLVM intrinsics: add, sub, mul, sdiv, srem)

# Addition with overflow checking
recipe s128.add(my: s128, other: s128) -> s128 {
    return llvm_intrinsic("llvm.sadd.with.overflow.i128", my, other)
}

# Subtraction with overflow checking
recipe s128.sub(my: s128, other: s128) -> s128 {
    return llvm_intrinsic("llvm.ssub.with.overflow.i128", my, other)
}

# Multiplication with overflow checking
recipe s128.mul(my: s128, other: s128) -> s128 {
    return llvm_intrinsic("llvm.smul.with.overflow.i128", my, other)
}

# Division (signed) - maps to LLVM sdiv
recipe s128.floordiv(my: s128, other: s128) -> s128 {
    when (other) {
        0 => throw panic("Division by zero"),
        _ => return llvm_intrinsic("sdiv", my, other)
    }
}

# Remainder (signed) - maps to LLVM srem
recipe s128.rem(my: s128, other: s128) -> s128 {
    when (other) {
        0 => throw panic("Division by zero"),
        _ => return llvm_intrinsic("srem", my, other)
    }
}

# Bitwise operations (direct LLVM mapping)
recipe s128.and(my: s128, other: s128) -> s128 {
    return llvm_intrinsic("and", my, other)
}

recipe s128.or(my: s128, other: s128) -> s128 {
    return llvm_intrinsic("or", my, other)
}

recipe s128.xor(my: s128, other: s128) -> s128 {
    return llvm_intrinsic("xor", my, other)
}

recipe s128.not(my: s128) -> s128 {
    return llvm_intrinsic("xor", my, -1)
}

# Bit shifting operations
recipe s128.shl(my: s128, bits: s128) -> s128 {
    return llvm_intrinsic("shl", my, bits)
}

recipe s128.shr(my: s128, bits: s128) -> s128 {
    return llvm_intrinsic("ashr", my, bits)  # Arithmetic right shift for signed
}

# Comparison operations (LLVM icmp)
recipe s128.eq(my: s128, other: s128) -> bool {
    return llvm_intrinsic("icmp eq", my, other)
}

recipe s128.ne(my: s128, other: s128) -> bool {
    return llvm_intrinsic("icmp ne", my, other)
}

recipe s128.lt(my: s128, other: s128) -> bool {
    return llvm_intrinsic("icmp slt", my, other)  # Signed less than
}

recipe s128.le(my: s128, other: s128) -> bool {
    return llvm_intrinsic("icmp sle", my, other)  # Signed less equal
}

recipe s128.gt(my: s128, other: s128) -> bool {
    return llvm_intrinsic("icmp sgt", my, other)  # Signed greater than
}

recipe s128.ge(my: s128, other: s128) -> bool {
    return llvm_intrinsic("icmp sge", my, other)  # Signed greater equal
}

# Advanced math operations using LLVM intrinsics
recipe s128.abs(my: s128) -> s128 {
    when (my) {
        >= 0 => return my,
        _ => return -my
    }
}

recipe s128.min(my: s128, other: s128) -> s128 {
    return if my <= other then my else other
}

recipe s128.max(my: s128, other: s128) -> s128 {
    return if my >= other then my else other
}

# Bit manipulation utilities
recipe s128.count_leading_zeros(my: s128) -> s128 {
    return llvm_intrinsic("llvm.ctlz.i128", my, false)
}

recipe s128.count_trailing_zeros(my: s128) -> s128 {
    return llvm_intrinsic("llvm.cttz.i128", my, false)
}

recipe s128.count_ones(my: s128) -> s128 {
    return llvm_intrinsic("llvm.ctpop.i128", my)
}

# Byte swapping for endianness conversion
recipe s128.swap_bytes(my: s128) -> s128 {
    return llvm_intrinsic("llvm.bswap.i128", my)
}

