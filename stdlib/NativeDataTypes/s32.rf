# ============================================================================
# Examples
# ============================================================================

routine fibonacci_s32(n: s32) -> s32 {
    when {
        n <= 1_s32 => n,
        _ => {
            var a: s32 = 0_s32
            var b: s32 = 1_s32
            var i: s32 = 2_s32

            while i <= n {
                let temp = a + b
                a = b
                b = temp
                i = i + 1_s32
            }

            return b
        }
    }
}

routine gcd_s32(a: s32, b: s32) -> s32 {
    var x = a.abs()
    var y = b.abs()

    while y != 0_s32 {
        let temp = y
        y = x % y
        x = temp
    }

    return x
}
