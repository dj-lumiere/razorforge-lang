record Error {
    public message: Text
    public code: s32?

    func from_text(message: Text) -> Error {
        return Error { message: message, code: none }
    }

    func from_code(message: Text, code: s32) -> Error {
        return Error { message: message, code: Some(code) }
    }

    func to_text(self) -> Text {
        when self.code {
            Some(c) => f"Error {c}: {self.message}",
            None => self.message
        }
    }
}