# RazorForge Compiler Integration Test
# Tests end-to-end compilation with memory slices, parser, AST, semantic analysis, and LLVM codegen

import stdlib/memory/DynamicSlice
import stdlib/memory/TemporarySlice
import system/console/show_line

###
Tests basic parsing and compilation of slice constructors
###
routine test_slice_constructors() {
    show_line("=== Testing Slice Constructors ===")

    # Test DynamicSlice constructor parsing
    var heap_buffer = DynamicSlice(128)
    show_line(f"DynamicSlice created with size: {heap_buffer.size()}")

    # Test TemporarySlice constructor parsing
    var stack_buffer = TemporarySlice(64)
    show_line(f"TemporarySlice created with size: {stack_buffer.size()}")

    show_line("Slice constructor test completed\n")
}

###
Tests generic method call parsing and compilation
###
routine test_generic_methods() {
    show_line("=== Testing Generic Methods ===")

    var buffer = DynamicSlice(32)

    # Test generic write method
    buffer.write<s32>!(0, 42)
    buffer.write<s32>!(4, 100)
    buffer.write<f32>!(8, 3.14f)

    # Test generic read method
    let int_val = buffer.read<s32>!(0)
    let int_val2 = buffer.read<s32>!(4)
    let float_val = buffer.read<f32>!(8)

    show_line(f"Read s32 values: {int_val}, {int_val2}")
    show_line(f"Read f32 value: {float_val}")

    show_line("Generic method test completed\n")
}

###
Tests memory operation parsing and compilation
###
routine test_memory_operations() {
    show_line("=== Testing Memory Operations ===")

    var buffer = TemporarySlice(48)

    # Test memory operation methods
    let size = buffer.size!()
    let addr = buffer.address!()
    let valid = buffer.is_valid!()
    let ptr = buffer.snatch!(16)

    show_line(f"Buffer size: {size}")
    show_line(f"Buffer address: 0x{addr:x}")
    show_line(f"Buffer valid: {valid}")
    show_line(f"Unsafe ptr at offset 16: 0x{ptr:x}")

    # Test sub-slicing
    let sub_buffer = buffer.slice!(8, 32)
    show_line(f"Sub-slice size: {sub_buffer.size!()}")

    show_line("Memory operation test completed\n")
}

###
Tests external routine declarations and linking
###
routine test_external_functions() {
    show_line("=== Testing External Functions ===")

    # These external functions should be linked from C runtime
    let allocated_ptr = claim_dynamic!(256)
    show_line(f"Heap allocated at: 0x{allocated_ptr:x}")

    # Test memory operations
    write_as<s64>!(allocated_ptr, 0xDEADBEEFCAFEBABE)
    let read_value = read_as<s64>!(allocated_ptr)
    show_line(f"Written and read value: 0x{read_value:x}")

    release_dynamic!(allocated_ptr)
    show_line("External routine test completed\n")
}

###
Tests danger block parsing and compilation
###
routine test_danger_blocks() {
    show_line("=== Testing Danger Blocks ===")

    var buffer = DynamicSlice(64)

    danger! {
        # Test raw memory access in danger block
        let raw_addr = buffer.address!()

        # Direct memory writes bypassing bounds checking
        write_as<u64>!(raw_addr, 0x123456789ABCDEF0)
        write_as<u64>!(raw_addr + 8, 0xFEDCBA9876543210)

        # Direct memory reads
        let val1 = read_as<u64>!(raw_addr)
        let val2 = read_as<u64>!(raw_addr + 8)

        show_line(f"Raw read 1: 0x{val1:x}")
        show_line(f"Raw read 2: 0x{val2:x}")

        # Test address_of operation
        let local_var: s32 = 999
        let var_addr = address_of!(local_var)
        show_line(f"Local variable address: 0x{var_addr:x}")
    }

    show_line("Danger block test completed\n")
}

###
Tests memory wrapper operations and safety
###
routine test_wrapper_operations() {
    show_line("=== Testing Wrapper Operations ===")

    var original = DynamicSlice(96)
    original.write<s64>!(0, 1000)
    original.write<s64>!(8, 2000)

    # Test hijack operation (exclusive access)
    hijacking hijacked from original:
        show_line("Buffer hijacked successfully")

    # Test snatch operation (get raw pointer)
    danger!:
        let raw_ptr = original.snatch()
        show_line(f"Raw pointer: 0x{raw_ptr:x}")

    show_line("Wrapper operation test completed\n")
}

###
Tests comprehensive memory management scenarios
###
routine test_memory_management() {
    show_line("=== Testing Memory Management ===")

    # Create multiple slices
    var heap1 = DynamicSlice(128)
    var heap2 = DynamicSlice(256)
    var stack1 = TemporarySlice(64)

    # Fill with test data
    for i in 0 to 16 {
        heap1.write<s32>!(i * 4, i * 10)
        heap2.write<s32>!(i * 4, i * 20)
        stack1.write<s32>!(i * 4, i * 30)
    }

    # Test copying between slices
    heap2.copy_from_stack!(stack1, 0, 128, 64)
    show_line("Copied data from stack to heap")

    # Test resizing
    heap1.resize!(256)
    show_line(f"Resized heap1 to: {heap1.size!()} bytes")

    # Test pattern operations
    heap2.fill!(0xAA)
    show_line("Filled heap2 with pattern")

    heap2.zero!()
    show_line("Zeroed heap2")

    show_line("Memory management test completed\n")
}

