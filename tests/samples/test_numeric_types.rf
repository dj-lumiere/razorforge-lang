# Comprehensive test for all sN, uN, fN numeric types in RazorForge

recipe test_signed_integers() {
    # Signed integers - s8, s16, s32, s64, s128
    let a: s8 = 127s8
    let b: s16 = 32767s16
    let c: s32 = 2147483647s32
    let d: s64 = 9223372036854775807s64
    let e: s128 = 170141183460469231731687303715884105727s128

    # Test operations
    let sum8: s8 = 10s8 + 20s8
    let sum16: s16 = 100s16 + 200s16
    let sum32: s32 = 1000s32 + 2000s32
    let sum64: s64 = 10000s64 + 20000s64

    # Test negative values
    let neg8: s8 = -128s8
    let neg16: s16 = -32768s16
    let neg32: s32 = -2147483648s32
    let neg64: s64 = -9223372036854775808s64
}

recipe test_unsigned_integers() {
    # Unsigned integers - u8, u16, u32, u64, u128
    let a: u8 = 255u8
    let b: u16 = 65535u16
    let c: u32 = 4294967295u32
    let d: u64 = 18446744073709551615u64
    let e: u128 = 340282366920938463463374607431768211455u128

    # Test operations
    let sum8: u8 = 10u8 + 20u8
    let sum16: u16 = 100u16 + 200u16
    let sum32: u32 = 1000u32 + 2000u32
    let sum64: u64 = 10000u64 + 20000u64

    # Test multiplication
    let mul8: u8 = 5u8 * 3u8
    let mul16: u16 = 50u16 * 30u16
}

recipe test_floating_point() {
    # Floating point - f16, f32, f64, f128
    let a: f16 = 3.14f16
    let b: f32 = 3.14159f32
    let c: f64 = 3.14159265358979f64
    let d: f128 = 3.14159265358979323846f128

    # Test operations
    let sum32: f32 = 1.5f32 + 2.5f32
    let sum64: f64 = 10.5f64 + 20.5f64

    # Test multiplication
    let mul32: f32 = 2.0f32 * 3.5f32
    let mul64: f64 = 5.5f64 * 2.2f64

    # Test division
    let div32: f32 = 10.0f32 / 2.0f32
    let div64: f64 = 100.0f64 / 4.0f64
}

recipe test_type_conversions() {
    # Test conversions between types
    let i32_val: s32 = 42s32
    let i64_val: s64 = i32_val.as(s64)

    let u8_val: u8 = 255u8
    let u16_val: u16 = u8_val.as(u16)

    let f32_val: f32 = 3.14f32
    let f64_val: f64 = f32_val.as(f64)

    # Integer to float
    let int_val: s32 = 100s32
    let float_from_int: f32 = int_val.as(f32)

    # Float to integer (truncation)
    let float_val: f64 = 42.9f64
    let int_from_float: s32 = float_val.as(s32)
}

recipe test_mixed_operations() {
    # Test operations with explicit types
    let x: s32 = 10s32
    let y: s32 = 20s32
    let z: s32 = x + y

    let a: f64 = 3.14f64
    let b: f64 = 2.0f64
    let c: f64 = a * b

    # Test comparisons
    let is_greater: bool = 100s32 > 50s32
    let is_equal: bool = 42u32 == 42u32
    let is_less: bool = 1.5f32 < 2.5f32
}

recipe test_system_sized_types() {
    # System-sized types (pointer-sized)
    let sys_signed: syssint = 9223372036854775807syssint
    let sys_unsigned: sysuint = 18446744073709551615sysuint

    # These are typically used for memory addresses and sizes
    let size: sysuint = 1024sysuint
    let offset: syssint = -100syssint
}

recipe main() -> s32 {
    test_signed_integers()
    test_unsigned_integers()
    test_floating_point()
    test_type_conversions()
    test_mixed_operations()
    test_system_sized_types()

    return 0s32
}
