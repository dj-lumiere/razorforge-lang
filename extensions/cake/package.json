{
  "name": "cake-language-support",
  "displayName": "Cake Language Support",
  "description": "Language support for Cake scripting language with LSP integration",
  "version": "0.1.0",
  "publisher": "razorforge",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Syntax Highlighters",
    "Snippets"
  ],
  "keywords": [
    "cake",
    "build automation",
    "scripting",
    "c# build"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:cake"
  ],
  "contributes": {
    "languages": [
      {
        "id": "cake",
        "aliases": [
          "Cake",
          "cake",
          "Cake Script"
        ],
        "extensions": [
          ".cake"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/cake-light.svg",
          "dark": "./icons/cake-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "cake",
        "scopeName": "source.cake",
        "path": "./syntaxes/cake.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Cake Language Support",
      "properties": {
        "cake.languageServer.path": {
          "type": "string",
          "default": "RazorForge.exe",
          "description": "Path to the Cake Language Server executable"
        },
        "cake.languageServer.args": {
          "type": "array",
          "default": ["--cake-lsp"],
          "description": "Arguments to pass to the Cake Language Server"
        },
        "cake.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the Cake language server"
        },
        "cake.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically format Cake files when saving"
        },
        "cake.autoSync": {
          "type": "boolean",
          "default": true,
          "description": "Automatically sync files and restart language server on configuration changes"
        },
        "cake.razorforgeIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic integration with RazorForge extension"
        },
        "cake.sharedWorkspace": {
          "type": "boolean",
          "default": true,
          "description": "Share workspace settings with RazorForge extension"
        },
        "cake.linting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time linting and code analysis"
        },
        "cake.formatting.indentSize": {
          "type": "number",
          "default": 4,
          "description": "Number of spaces for indentation"
        },
        "cake.formatting.insertFinalNewline": {
          "type": "boolean",
          "default": true,
          "description": "Insert final newline at end of file"
        }
      }
    },
    "commands": [
      {
        "command": "cake.newScript",
        "title": "New Cake Script",
        "category": "Cake"
      },
      {
        "command": "cake.restartLanguageServer",
        "title": "Restart Language Server",
        "category": "Cake"
      },
      {
        "command": "cake.showServerStatus",
        "title": "Show Server Status",
        "category": "Cake"
      },
      {
        "command": "cake.formatDocument",
        "title": "Format Document",
        "category": "Cake"
      },
      {
        "command": "cake.lintDocument",
        "title": "Lint Document",
        "category": "Cake"
      },
      {
        "command": "cake.syncWithRazorForge",
        "title": "Sync with RazorForge Extension",
        "category": "Cake"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}