{
  "name": "suflae-language-support",
  "displayName": "Suflae Language Support",
  "description": "Language support for Suflae scripting language with LSP integration",
  "version": "0.1.0",
  "publisher": "razorforge",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Syntax Highlighters",
    "Snippets"
  ],
  "keywords": [
    "suflae",
    "build automation",
    "scripting",
    "c# build"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:suflae"
  ],
  "contributes": {
    "languages": [
      {
        "id": "suflae",
        "aliases": [
          "Suflae",
          "suflae",
          "Suflae Script"
        ],
        "extensions": [
          ".sf"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/suflae-light.svg",
          "dark": "./icons/suflae-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "suflae",
        "scopeName": "source.sf",
        "path": "./syntaxes/suflae.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Suflae Language Support",
      "properties": {
        "suflae.languageServer.path": {
          "type": "string",
          "default": "RazorForge.exe",
          "description": "Path to the Suflae Language Server executable"
        },
        "suflae.languageServer.args": {
          "type": "array",
          "default": [
            "--suflae-lsp"
          ],
          "description": "Arguments to pass to the Suflae Language Server"
        },
        "suflae.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Suflae language server"
        },
        "suflae.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically format Suflae files when saving"
        },
        "suflae.autoSync": {
          "type": "boolean",
          "default": true,
          "description": "Automatically sync files and restart language server on configuration changes"
        },
        "suflae.razorforgeIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic integration with RazorForge extension"
        },
        "suflae.sharedWorkspace": {
          "type": "boolean",
          "default": true,
          "description": "Share workspace settings with RazorForge extension"
        },
        "suflae.linting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time linting and code analysis"
        },
        "suflae.formatting.indentSize": {
          "type": "number",
          "default": 4,
          "description": "Number of spaces for indentation"
        },
        "suflae.formatting.insertFinalNewline": {
          "type": "boolean",
          "default": true,
          "description": "Insert final newline at end of file"
        }
      }
    },
    "commands": [
      {
        "command": "suflae.newScript",
        "title": "New Suflae Script",
        "category": "Suflae"
      },
      {
        "command": "suflae.restartLanguageServer",
        "title": "Restart Language Server",
        "category": "Suflae"
      },
      {
        "command": "suflae.showServerStatus",
        "title": "Show Server Status",
        "category": "Suflae"
      },
      {
        "command": "suflae.formatDocument",
        "title": "Format Document",
        "category": "Suflae"
      },
      {
        "command": "suflae.lintDocument",
        "title": "Lint Document",
        "category": "Suflae"
      },
      {
        "command": "suflae.syncWithRazorForge",
        "title": "Sync with RazorForge Extension",
        "category": "Suflae"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
